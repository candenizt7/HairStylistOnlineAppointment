@{
    ViewData["Title"] = "Page not found";
    var code = (int?)ViewBag.Code ?? 0;
    var title = code == 404 ? "Page not found" : $"Error {code}";
}
<div class="container mt-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body py-5 text-center">
            <h3 class="mb-3">@title</h3>
            <p class="text-muted">Please check the address or return to the <a asp-controller="Home" asp-action="Index">home page</a>.</p>
        </div>
    </div>
</div>
