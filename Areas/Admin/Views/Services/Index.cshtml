@model IEnumerable<OnlineAppointment.Models.Service>
@{
    ViewData["Title"] = "Services";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="bi bi-gear me-2"></i>Services</h2>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Services" asp-action="Create">
            <i class="bi bi-plus-lg me-1"></i> Add Service
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body py-5 text-center">
                <div class="mb-2">No services found.</div>
                <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Services" asp-action="Create">
                    Add first service
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th class="text-center">Duration (min)</th>
                        <th class="text-end">Price</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@s.Name</td>
                            <td class="text-center">@s.DurationMinutes</td>
                            <td class="text-end">@s.Price.ToString("C")</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       asp-area="Admin" asp-controller="Services" asp-action="Edit" asp-route-id="@s.Id">
                                        Edit
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger"
                                       asp-area="Admin" asp-controller="Services" asp-action="Delete" asp-route-id="@s.Id">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
